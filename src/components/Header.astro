---
import { Image } from "astro:assets";
import profileImage from "../images/profile-img.jpg";
---

<header class="header">
  <div class="person">
    <div class="person__profile">
      <Image
        loading={"eager"}
        width={1200}
        height={1200}
        src={profileImage}
        alt={"profile"}
      />
    </div>
    <h2>حسین انصافی</h2>
    <p>توسعه دهنده فرانت اند</p>
  </div>
</header>

<style>
  .header {
    display: flex;
    align-items: center;
    justify-content: center;
    padding-block: 1.25rem;
    background-color: #212121;
    color: white;
  }

  .person {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    text-align: center;
  }

  .person__profile {
    display: flex;
    justify-content: center;
  }

  .person img {
    border-radius: 100%;
    width: 7rem;
    height: 7rem;
    object-fit: cover;
    object-position: center;
  }

  .person p {
    opacity: 0.6;
    color: white;
  }
</style>
